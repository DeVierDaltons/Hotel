<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>
    <services>
      <service name="Hotel.Logger.Services.LoggerService">
        <endpoint
          address="net.tcp://localhost:8000/Logger"
          binding="netTcpBinding"
          contract="Hotel.Logger.Contracts.ILoggerService" />
      </service>
    </services>
    <bindings>
      <netTcpBinding>
        <binding transactionFlow="false" />
      </netTcpBinding>
    </bindings>
  </system.serviceModel>
</configuration>