<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
    </startup>
    <system.serviceModel>
      <behaviors>
        <serviceBehaviors>
          <behavior name="debug">
            <serviceDebug includeExceptionDetailInFaults="true"/>
          </behavior>
        </serviceBehaviors>
      </behaviors>
    <services>
      <service name="Hotel.Logger.Services.LoggerService" behaviorConfiguration="debug">
        <endpoint address="net.tcp://localhost:9350/Logger" binding="netTcpBinding" contract="Hotel.Logger.Contracts.ILoggerService"/>
      </service>
    </services>
    <bindings>
      <netTcpBinding>
        <binding transactionFlow="false"/>
      </netTcpBinding>
    </bindings>
  </system.serviceModel>
</configuration>
