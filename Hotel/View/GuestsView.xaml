<Window x:Class="Hotel.View.GuestsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.View"
        xmlns:viewModel="clr-namespace:Hotel.ViewModel"
        mc:Ignorable="d"
        Title="GuestsViewModel" Height="404.126" Width="417.576">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Button Content="Add Guest" Command="{Binding ShowAddGuestWindowCommand}"/>
            <Button Content="Edit Selected Guest" Click="OnEditGuestClicked"/>
        </StackPanel>
        <ListBox ItemsSource="{Binding Guests, Mode=TwoWay}" Name="GuestsList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ListBoxItem>
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <TextBlock Background="#FF2C2CCA" TextWrapping="Wrap" Text="Name:" FontWeight="Bold" Margin="2"/>
                            <TextBlock Background="#FFA3694D" TextWrapping="Wrap" Text="{Binding FirstName}" Margin="2,2,0,2"/>
                            <TextBlock Background="#FFA3694D" TextWrapping="Wrap" Text="{Binding LastName}" Margin="2"/>
                            <TextBlock Background="#FFA5B625" TextWrapping="Wrap" Text="@: " FontWeight="Bold" Margin="2"/>
                            <TextBlock Background="#FFEAE1C0" TextWrapping="Wrap" Text="{Binding EmailAdress}" Margin="2"/>
                            <TextBlock Background="#FFEAE1C0" TextWrapping="Wrap" Text="Phone:" Margin="2" FontWeight="Bold"  />
                            <TextBlock Background="#FF375130" TextWrapping="Wrap" Text="{Binding PhoneNumber}" Margin="2" />
                        </StackPanel>
                    </ListBoxItem>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
