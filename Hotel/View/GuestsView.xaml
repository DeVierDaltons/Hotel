<UserControl x:Class="Hotel.View.GuestsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="326.841" d:DesignHeight="280.631"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Button Content="Add Guest" Command="{Binding ShowAddGuestWindowCommand}"/>
            <Button Content="Edit Selected Guest" Click="OnEditGuestClicked"/>
        </StackPanel>
        <ListBox ItemsSource="{Binding Guests, Mode=TwoWay}" Name="GuestsList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <TextBlock TextWrapping="Wrap" Text="Name:" FontWeight="Bold" Margin="2"/>
                        <TextBlock TextWrapping="Wrap" Text="{Binding FirstName}" Margin="2,2,0,2"/>
                        <TextBlock TextWrapping="Wrap" Text="{Binding LastName}" Margin="2"/>
                        <TextBlock TextWrapping="Wrap" Text="@: " FontWeight="Bold" Margin="2"/>
                        <TextBlock TextWrapping="Wrap" Text="{Binding EmailAdress}" Margin="2"/>
                        <TextBlock TextWrapping="Wrap" Text="Phone:" Margin="2" FontWeight="Bold"  />
                        <TextBlock TextWrapping="Wrap" Text="{Binding PhoneNumber}" Margin="2" />
                        <TextBlock TextWrapping="Wrap" Text="Country:" Margin="2" FontWeight="Bold"  />
                        <TextBlock TextWrapping="Wrap" Text="{Binding Address.Country}" Margin="2" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
