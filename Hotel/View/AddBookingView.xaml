<UserControl x:Class="Hotel.View.AddBookingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        >
    <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom">
            <Label Content="Guest:"/>
            <ComboBox Name="GuestDropdown" Width="80" SelectedItem="{Binding Guest}"/>

            <Label Content="Room:"/>
            <ComboBox Name="RoomDropdown" Width="80" SelectedItem="{Binding Room}"/>

            <Button Width="80" Command="{Binding AddBookingCommand}" Content="Save"></Button>
        </WrapPanel>
        <Calendar Name="BookingRangeCalendar" SelectionMode="SingleRange">

        </Calendar>
    </DockPanel>
</UserControl>
